<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#20BDFCC9"
    tools:context=".HexAtomGUIActivity" >

    <ToggleButton
        android:id="@+id/genDiameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Diameter"
        android:textOn = "Diameter"
        android:textOff = "Diameter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:id="@+id/SelectorGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignRight="@+id/genDiameter"
        android:layout_alignEnd="@+id/genDiameter"
        android:layout_above="@+id/genDiameter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ToggleButton
            android:id="@+id/genA0"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/Atom0"
            android:textOn = "0"
            android:textOff = "0"
            android:padding="0dp" />

        <ToggleButton
            android:id="@+id/genA1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Atom1"
            android:textOn = "1"
            android:textOff = "1"/>

        <ToggleButton
            android:id="@+id/genA2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Atom2"
            android:textOn = "2"
            android:textOff = "2"/>

        <ToggleButton
            android:id="@+id/genA3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Atom3"
            android:textOn = "3"
            android:textOff = "3"/>

        <ToggleButton
            android:id="@+id/genA4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Atom4"
            android:textOn = "4"
            android:textOff = "4"/>

        <ToggleButton
            android:id="@+id/genA5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Atom5"
            android:textOn = "5"
            android:textOff = "5"/>

        <ToggleButton
            android:id="@+id/genA6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Atom6"
            android:textOn = "6"
            android:textOff = "6"/>

        <ToggleButton
            android:id="@+id/genA7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Atom7"
            android:textOn = "7"
            android:textOff = "7"/>

        <ToggleButton
            android:id="@+id/genA8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Atom8"
            android:textOn = "8"
            android:textOff = "8"/>

        <ToggleButton
            android:id="@+id/genA9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Atom9"
            android:textOn = "9"
            android:textOff = "9"/>

        <ToggleButton
            android:id="@+id/genA10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Atom10"
            android:textOn = "10"
            android:textOff = "10"/>

        <ToggleButton
            android:id="@+id/genA11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Atom11"
            android:textOn = "11"
            android:textOff = "11"/>

    </RadioGroup>

    <LinearLayout
        android:id="@+id/CenterLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:padding="25dp"
        android:id="@+id/linearLayout2"
        android:layout_toEndOf="@+id/MapView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridLayout"
            android:layout_alignParentTop="true"
            android:rowCount="2"
            android:columnCount="2"
            android:background="@drawable/atom_probability_border"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Rotation"
                    android:id="@+id/textView"
                    android:layout_gravity="center" />

                <com.hexatom.gui.hexatomgui.RoundKnobButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/view"
                    android:layout_above="@+id/CenterLayout"
                    android:layout_alignLeft="@+id/CenterLayout"
                    android:layout_gravity="center">

                </com.hexatom.gui.hexatomgui.RoundKnobButton>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="38dp"
                    android:layout_height="44dp"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Quantum"
                    android:id="@+id/textView2"
                    android:layout_gravity="center" />

                <com.hexatom.gui.hexatomgui.RoundKnobButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Q"
                    android:layout_alignTop="@+id/CenterLayout"
                    android:layout_toRightOf="@+id/MapView"
                    android:layout_gravity="center">

                </com.hexatom.gui.hexatomgui.RoundKnobButton>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="38dp"
                    android:layout_height="44dp"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Erasure"
                    android:id="@+id/textView3"
                    android:layout_gravity="center" />

                <com.hexatom.gui.hexatomgui.RoundKnobButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/E"
                    android:layout_alignTop="@+id/CenterLayout"
                    android:layout_toRightOf="@+id/MapView"
                    android:layout_gravity="center">

                </com.hexatom.gui.hexatomgui.RoundKnobButton>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="38dp"
                    android:layout_height="44dp"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tempo"
                    android:id="@+id/textView4"
                    android:layout_gravity="center" />

                <com.hexatom.gui.hexatomgui.RoundKnobButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/T"
                    android:layout_alignTop="@+id/CenterLayout"
                    android:layout_toRightOf="@+id/MapView"
                    android:layout_gravity="center">

                </com.hexatom.gui.hexatomgui.RoundKnobButton>

                <TextView
                    android:id="@+id/TempoProgress"
                    android:layout_width="38dp"
                    android:layout_height="44dp"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:layout_gravity="center" />
            </LinearLayout>

        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toStartOf="@+id/linearLayout2"
        android:layout_toEndOf="@+id/genDiameter"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/linearLayout2"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_toEndOf="@+id/SelectorGroup"
            android:id="@+id/linearLayout"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|center_horizontal">

            <Button
                android:id="@+id/SendDiameterButton"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />
        </LinearLayout>

        <View
            android:id="@+id/MapView"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle"
            android:layout_toEndOf="@+id/linearLayout"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_alignParentBottom="true"
            android:layout_margin="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp" />

    </LinearLayout>


</RelativeLayout>
